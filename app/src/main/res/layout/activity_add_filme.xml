<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mtgo007.movies.AddFilme">

    <TableRow android:gravity="center"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:" />

        <EditText
            android:id="@+id/nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Nome" />
    </TableRow>
    <TableRow android:gravity="center"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gênero" />

        <EditText
            android:id="@+id/genero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Ação, Drama, Comédia" />
    </TableRow>
    <TableRow android:gravity="center"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diretor" />

        <EditText
            android:id="@+id/diretor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Diretor" />
    </TableRow>
    <TableRow android:gravity="center"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Faixa Etária"
            />

        <Spinner
            android:id="@+id/faixaEtaria"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </TableRow>
    <TableRow android:gravity="center"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ano de Lançamento"
            />

        <EditText
            android:id="@+id/ano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Ano de Lançamento" />
    </TableRow>
    <TableRow android:gravity="center"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar Filme" />
    </TableRow>
</TableLayout>
