<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <ImageView
        style="@style/foto"
        android:id="@+id/tarja"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        style="@style/nome_fil"
        android:layout_toRightOf="@id/tarja"
        android:id="@+id/nome_fil"
        android:text="Um filme incrível e premiado qualquer" />

    <TextView
        style="@style/nome_dir"
        android:layout_alignLeft="@id/nome_fil"
        android:layout_below="@id/nome_fil"
        android:id="@+id/nome_dir"
        android:text="Guilherme deodoro" />

    <TextView
        style="@style/genero"
        android:layout_alignLeft="@id/nome_fil"
        android:layout_below="@id/nome_dir"
        android:id="@+id/genero"
        android:text="Drama" />

    <TextView
        style="@style/lançamento"
        android:layout_alignParentRight="true"
        android:layout_below="@id/nome_dir"
        android:id="@+id/ano"
        android:text="1999" />

</RelativeLayout>