<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType = "centerCrop"
        android:padding="5dp"
        android:background="#00FF00"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="#000000"
        android:id="@+id/imageView" />


    <TextView
        android:id="@+id/textNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textColor="#00FF00"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textDiretor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/faixa"
        android:layout_alignStart="@+id/textNome"
        android:text="TextView"
        android:textColor="#00FF00"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/textGenero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textNome"
        android:layout_alignBottom="@+id/textNome"
        android:layout_marginEnd="78dp"
        android:layout_toStartOf="@+id/faixa"
        android:text="TextView"
        android:textColor="#00FF00" />

    <TextView
        android:id="@+id/textAno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textGenero"
        android:layout_below="@+id/textNome"
        android:text="TextView"
        android:textColor="#00FF00" />

    <ImageView
        android:id="@+id/faixa"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textNome"
        android:layout_marginEnd="11dp"
        android:src="@drawable/ic_launcher_background" />


</RelativeLayout>