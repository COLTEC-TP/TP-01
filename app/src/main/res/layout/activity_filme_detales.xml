<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilmeDetalesActivity"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:stretchColumns="1" >


    <TableRow android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/detales_tarja"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:src="@drawable/ic_launcher_background" />

    </TableRow>

    <TableRow>
        <ImageView
            android:src="@drawable/film"
            android:paddingBottom="15dp"/>

        <TextView
            android:id="@+id/detales_nome_fil"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text="Nenhum filme carregado ate agora"
            android:textSize="20dp" />

    </TableRow>

    <TableRow>
        <ImageView
            android:src="@drawable/director"
            android:paddingBottom="15dp" />

        <TextView
            android:textSize="20dp"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:id="@+id/detales_nome_dir"
            android:text="Diretor" />

    </TableRow>

    <TableRow>
        <ImageView android:src="@drawable/theater"
            android:paddingBottom="15dp"/>

        <TextView
            android:textSize="20dp"
            android:id="@+id/detales_genero"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text="Genero" />

    </TableRow>

    <TableRow>
        <ImageView
            android:src="@drawable/calendar"
            android:paddingBottom="15dp"/>
        <TextView
            android:textSize="20dp"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:id="@+id/detales_ano"
            android:text="ano" />

    </TableRow>

    <RelativeLayout android:layout_marginTop="40dp">
        <ImageButton
            android:id="@+id/detales_btCompartilha"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/share" />

    </RelativeLayout>


</TableLayout>