<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mtgo007.movies.details">

    <TextView
        android:id="@+id/detalhe_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:textSize="40dp"
        android:textAlignment="center"
        android:text="Titulo" />

    <TextView
        android:id="@+id/detalhe_diretor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/detalhe_titulo"
        android:layout_marginStart="35dp"
        android:layout_marginTop="39dp"
        android:text="Diretor"
        android:textAlignment="center"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/detalhe_genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/detalhe_ano"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp"
        android:text="Genero"
        android:textAlignment="center"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/detalhe_ano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/detalhe_diretor"
        android:layout_below="@+id/detalhe_diretor"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="81dp"
        android:text="Ano"
        android:textAlignment="center"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/detalhe_faixa"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/detalhe_ano"
        android:layout_alignEnd="@+id/detalhe_genero"
        android:layout_marginEnd="26dp"
        />

    <Button
        android:id="@+id/details_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detalhe_ano"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="Share" />

    <Button
        android:id="@+id/details_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/details_share"
        android:layout_below="@+id/details_share"
        android:layout_marginTop="24dp"
        android:text="Remover" />
</RelativeLayout>
